{
  "DbConnections": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "postgres",
      "Username": "postgres",
      "Password": 123456789
    }
  },
  "DefaultUserRole": "User",
  "Jwt": {
    "Secret": "secretsecretsecretsecretsecretsecret",
    "Issuer": "issuer",
    "Audience": "audience",
    "AccessTokenExpirationInMinutes": 10,
    "AccessTokenCookieExpirationInMinutes": 30,
    "SessionIdCookieExpirationInHours": 6,
    "RefreshTokenExpirationInDays": 15
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args":
        {
          "path": "logs/log-",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff zzz} [{Level:u3}] Source: {SourceContext} Host: {MachineName} Thread: {ThreadId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "GmailOptions": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 465,
    "FromEmail": "srandards.sender@gmail.com",
    "Username": "GmailOptions:Username",
    "Password": "GmailOptions:Password"
  }
}
