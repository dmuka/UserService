@page
@model WebApi.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<div class="center-container">
    <div class="form-container">
        <h2>Forgot password</h2>
        <hr/>
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <partial name="Shared/Views/Account/_EmailPartial" for="Input.Email"/>
            
            <div class="button-container">
                <button type="submit" class="w-25 btn btn-lg btn-primary">Submit</button>
                <button type="button" class="w-25 btn btn-lg btn-secondary" onclick="redirectToSignIn()">Back</button>
            </div>
            </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_RedirectScriptsPartial"/>
}