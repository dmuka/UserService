@page
@model WebApi.Pages.Account.SetupMfaModel
@{
    ViewData["Title"] = "Setup multi-factor authentication";
}

<h1>@ViewData["Title"]</h1>

<div>
    <p>Scan the QR code below with Microsoft or Google Authenticator (or any TOTP compatible app):</p>
    <div id="qrCode">
        <img src="data:image/png;base64,@Model.QrCode" alt="QR Code" style="width: 200px; height: 200px;" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label>Verification Code</label>
            <div class="mfa-code-inputs">
                <input type="text" class="mfa-digit" maxlength="1" name="digit1" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[0].ToString() : "")" autocomplete="off" />
                <input type="text" class="mfa-digit" maxlength="1" name="digit2" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[1].ToString() : "")" autocomplete="off" />
                <input type="text" class="mfa-digit" maxlength="1" name="digit3" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[2].ToString() : "")" autocomplete="off" />
                <input type="text" class="mfa-digit" maxlength="1" name="digit4" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[3].ToString() : "")" autocomplete="off" />
                <input type="text" class="mfa-digit" maxlength="1" name="digit5" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[4].ToString() : "")" autocomplete="off" />
                <input type="text" class="mfa-digit" maxlength="1" name="digit6" value="@(Model.VerificationCode?.Length > 0 ? Model.VerificationCode[5].ToString() : "")" autocomplete="off" />
                <input type="hidden" asp-for="VerificationCode" id="VerificationCode" />
            </div>
            <span asp-validation-for="VerificationCode" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Verify</button>
        </div>
    </form>
</div>

<style>
    #qrCode {
        margin-bottom: 20px;
    }
</style>

@section Scripts {
    <partial name="_MfaScriptsPartial"/>
}