@page
@using WebApi.Pages
@model WebApi.Pages.Account.ResendConfirmationEmailModel
@{
    ViewData["Title"] = "Resend confirmation email";
}

<h1>@ViewData["Title"]</h1>

<div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }
    <form method="post">
        <button type="submit" class="btn btn-primary">Resend Confirmation Email</button>
    </form>
    <a asp-page="@Routes.Users" class="btn btn-secondary">Back</a>
</div>