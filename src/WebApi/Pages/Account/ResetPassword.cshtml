@page
@using WebApi.Pages
@model WebApi.Pages.Account.ResetPasswordModel

<div class="center-container">
    <div class="form-container">
        <h2>Reset Password</h2>
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <a href="#" class="password-icon-overlay">
                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                </a>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.ConfirmPassword">Confirm password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <a href="#" class="password-icon-overlay">
                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                </a>
            </div>
            <div class="button-container">
                <button type="submit" class="w-25 btn btn-lg btn-primary">Reset</button>
                <button type="button" class="w-25 btn btn-lg btn-secondary" onclick="redirectToSignIn()">Sign in</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function redirectToSignIn() {
            window.location.href = '@Url.Page(Routes.SignIn)';
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.password-icon-overlay').forEach(function(toggle) {
                toggle.addEventListener('click', togglePasswordVisibility);
            });
        });

        function togglePasswordVisibility(event) {
            event.preventDefault();

            const container = event.currentTarget.closest('.form-floating');
            const inputField = container.querySelector('input');
            const icon = event.currentTarget.querySelector('i');

            if (inputField.type === "password") {
                inputField.type = 'text';
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                inputField.type = 'password';
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }
    </script>
}