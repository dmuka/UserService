@page
@model WebApi.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group mb-3">
            <input type="text" class="form-control" asp-for="SearchString" placeholder="Search users...">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
            <a asp-page="./Create" class="btn btn-primary">Add new user</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>User name</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>
                <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>Total users: @Model.Users.Count</p>