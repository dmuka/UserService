@using WebApi.Pages
<ul class="navbar-nav">
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Profile/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="@Routes.Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="@Routes.SignUp">Sign up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="@Routes.SignIn">Sign in</a>
        </li>
    }
</ul>