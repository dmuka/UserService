<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Standards</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Стили сайта -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <!-- Дополнительные стили для отдельных страниц -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">Standards</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Privacy">Конфиденциальность</a>
                    </li>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Standards - <a asp-page="/Privacy">Конфиденциальность</a>
    </div>
</footer>

<!-- Подключение скриптов -->
<!-- Bootstrap Bundle with Popper -->
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Секция для скриптов валидации и страничных скриптов -->
@await RenderSectionAsync("Scripts", required: false)

<!-- Скрипты сайта -->
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>